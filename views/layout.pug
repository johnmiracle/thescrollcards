body
  //- Back to top Button
  button#myBtn(onclick='topFunction()', title='Go to top') Top
  
  section
    .container
      nav.navbar.navbar-expand-lg.navbar-light
        a.navbar-brand(href='/') 
          img(src="./img/logo_blue.png", alt="Logo" width='100%')
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse.justify-content-between
          ul.navbar-nav.centered.m-auto
          div.centered
            ul.navbar-nav.mr-auto
              if user
                li.nav-item.dropdown
                  a#navbardrop.nav-link.dropdown-toggle(href='#', data-toggle='dropdown')
                    i.fa.fa-user
                      br
                      | #{user.firstName}
                  .dropdown-menu
                    a.dropdown-item.nav-drop(href='/users/orders') Order History
                    a.dropdown-item.nav-drop(href='/logout') Log Out
                li.nav-item
                    a.nav-link(href='/cart')
                      i.fa.fa-shopping-cart 
                        br 
                        span Cart
                      if session.cart
                        span.badge= session.cart.totalQty
              else
                li.nav-item
                    a.nav-link(href='/login')
                      i.fa.fa-user 
                        br
                        span Sign In
                li.nav-item
                    a.nav-link(href='/cart')
                      i.fa.fa-shopping-cart
                        br 
                        span Cart
                      if session.cart
                        span.badge.badge-primary= session.cart.totalQty
              
