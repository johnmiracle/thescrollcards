include ./mixins/_flash-messages

link(rel='stylesheet', href="/stylesheets/style.css", type='text/css')
link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', type='text/css')
link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js')
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')

block content
  section
    .container
      .row
        .col-md-3
        .col-md-6
          .container.card.bg-light
              br    
              h4.card-title.mt-3.text-center Create Admin Account
              br
              form(method='POST', action="/admin/register")
                +flashMessages()
                .form-group.input-group
                  .input-group-prepend
                    span.input-group-text
                      i.fa.fa-user
                  input#firstName.form-control(name='firstName', placeholder='First name', type='text' value='' required="")
                // form-group//
                .form-group.input-group
                  .input-group-prepend
                    span.input-group-text
                      i.fa.fa-user
                  input#lastName.form-control(name='lastName', placeholder='Last name', type='text' value='' required="")
                // form-group//
                .form-group.input-group
                  .input-group-prepend
                    span.input-group-text
                      i.fa.fa-envelope
                  input#email.form-control(name='email', placeholder='Email address', type='email' value='' required="")
                // form-group//
                .form-group.input-group
                  .input-group-prepend
                    span.input-group-text
                      i.fa.fa-lock
                  input#password.form-control(name='password' placeholder='Create password', type='password' value='' required="")
                // form-group//
                .form-group.input-group
                  .input-group-prepend
                  input#isAdmin.form-control(type='hidden', name='isAdmin', value="yes")
                // form-group end.//
                .form-group
                  button.btn.btn-primary.btn-block(type='submit')  Create Account 
                // form-group//
                p.text-center
                  | Have an account? 
                  a(href='/admin/cPanel') Log In
        .col-md-3
        
          // card.//